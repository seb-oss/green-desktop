{
  "name": "green-desktop",
  "version": "1.0.0",
  "description": "Green Design System",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --mac --win",
    "build:mac": "electron-builder build --mac",
    "build:win": "electron-builder build --win",
    "release": "electron-builder build --mac --win -p always"
  },
  "build": {
    "appId": "com.seb.green",
    "productName": "Green Design System",
    "publish": [
      {
        "provider": "github",
        "owner": "seb-oss",
        "repo": "green-desktop",
        "private": false
      }
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/gds.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/gds.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "assets/gds.png",
      "target": [
        "AppImage"
      ]
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
